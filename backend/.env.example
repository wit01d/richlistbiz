# Server Configuration
PORT=8080
ENV=development

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/richlistbiz?sslmode=disable

# Keycloak Authentication
# URL should match your frontend Keycloak config (no /auth path for newer Keycloak)
KEYCLOAK_URL=https://richlist.biz
KEYCLOAK_REALM=richlistbiz
KEYCLOAK_CLIENT_ID=https://richlistbiz.cloudflareaccess.com/cdn-cgi/access/callback

# JWT_PUBLIC_KEY_URL is automatically derived as:
# ${KEYCLOAK_URL}/realms/${KEYCLOAK_REALM}/protocol/openid-connect/certs
# Only set this if you need to override the default
# JWT_PUBLIC_KEY_URL=

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_SUCCESS_URL=https://richlist.biz/dashboard?payment=success
STRIPE_CANCEL_URL=https://richlist.biz/dashboard?payment=cancelled

# CORS - comma-separated list of allowed origins
ALLOWED_ORIGINS=https://richlist.biz,http://localhost:5173
